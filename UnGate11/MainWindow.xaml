                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="(Label.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                            To="1.05" Duration="0:0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="(Label.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                            To="1" Duration="0:0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                        <DoubleAnimation
                                            Storyboard.TargetProperty="(Label.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                            To="1" Duration="0:0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <!-- Edition Selection Panel -->
        <StackPanel x:Name="EditionSelectionPanel"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Margin="0,50,0,0"
            Visibility="Collapsed"
            Opacity="0">
            
            <ScrollViewer 
                MaxHeight="200"
                Width="300"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="EditionButtonsPanel"
                    HorizontalAlignment="Center">
                </StackPanel>
            </ScrollViewer>
        </StackPanel>

        <Label
            x:Name="CloseLabel"
            Content="✕"
            FontWeight="ExtraBold" FontSize="20" Foreground="White"
            Height="30" Width="30" Padding="0" Margin="5"
            HorizontalAlignment="Right" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            MouseLeftButtonUp="CloseWindow" MouseRightButtonUp="CloseWindow">
            <Label.RenderTransform>
                <TranslateTransform />
            </Label.RenderTransform>
            <Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="Coral" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="White" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <Label
            Content="—"
            FontWeight="ExtraBold" FontSize="16" Foreground="White"
            Height="30" Width="30" Padding="0" Margin="0,3,35,0"
            HorizontalAlignment="Right" VerticalAlignment="Top"
            HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            MouseLeftButtonUp="MinimizeWindow">
            <Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="Goldenrod" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="White" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <Label
            Content="ⓘ"
            FontSize="20" Foreground="White"
            Height="30" Width="30" Padding="0" Margin="5"
            HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
            MouseLeftButtonUp="Info">
            <Label.Style>
                <Style TargetType="Label">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="CornflowerBlue" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Duration="0:0:0.1" To="White" Storyboard.TargetProperty="(Label.Foreground).(SolidColorBrush.Color)"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>

        <Label MouseLeftButtonDown="DragWindow" Visibility="Hidden" FontFamily="Bahnschrift" x:Name="PatchStateLabel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5"/>
        <Label MouseLeftButtonDown="DragWindow" FontFamily="Bahnschrift" Foreground="White" x:Name="VersionLabel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="5" />
    </Grid>

    <Window.Resources>
        <!-- Fade out LogoCanvas -->
        <Storyboard x:Key="FadeLogoOut">
            <DoubleAnimation Storyboard.TargetName="LogoCanvas"
                         Storyboard.TargetProperty="Opacity"
                         To="0.3" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- Fade in LogoCanvas -->
        <Storyboard x:Key="FadeLogoIn">
            <DoubleAnimation Storyboard.TargetName="LogoCanvas"
                         Storyboard.TargetProperty="Opacity"
                         To="1" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- Fade in LoadingGIF -->
        <Storyboard x:Key="FadeLoadingIn">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LoadingGIF"
                                  Storyboard.TargetProperty="Visibility"
                                  Duration="0:0:0">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimation Storyboard.TargetName="LoadingGIF"
                     Storyboard.TargetProperty="Opacity"
                     To="1" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="FadeLoadingOut">
            <DoubleAnimation Storyboard.TargetName="LoadingGIF"
                     Storyboard.TargetProperty="Opacity"
                     To="0" Duration="0:0:0.3"/>
            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="LoadingGIF"
                                  Storyboard.TargetProperty="Visibility"
                                  BeginTime="0:0:0.3">
                <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <!-- Fade in winow on open (start or from minimized) -->
        <Storyboard x:Key="FadeInWindow">
            <DoubleAnimation
        Storyboard.TargetProperty="Opacity"
        To="1"
        Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="FadeOutWindow">
            <DoubleAnimation
Storyboard.TargetProperty="Opacity"
To="0" Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Slide and fade out window (on close) -->
        <Storyboard x:Key="SlideOutWindow">
            <DoubleAnimation 
        Storyboard.TargetProperty="(Window.Top)"
        By="50" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
        Storyboard.TargetProperty="Opacity"
        To="0" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        
        <!-- Wiggle storyboard for buttons (no TargetName; target set from code) -->
        <Storyboard x:Key="WiggleButton" FillBehavior="Stop" Duration="0:0:0.4">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.X)">
                <EasingDoubleKeyFrame KeyTime="0:0:0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.08" Value="-10">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.16" Value="10">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.24" Value="-7">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
                <EasingDoubleKeyFrame KeyTime="0:0:0.4" Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuadraticEase EasingMode="EaseOut"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        
        <!-- Fade out PatchButton -->
        <Storyboard x:Key="FadePatchButtonOut">
            <DoubleAnimation Storyboard.TargetName="PatchButton"
                         Storyboard.TargetProperty="Opacity"
                         To="0.3" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- Fade in PatchButton -->
        <Storyboard x:Key="FadePatchButtonIn">
            <DoubleAnimation Storyboard.TargetName="PatchButton"
                         Storyboard.TargetProperty="Opacity"
                         To="1" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- Fade out UpdateRefreshButton -->
        <Storyboard x:Key="FadeRefreshButtonOut">
            <DoubleAnimation Storyboard.TargetName="UpdateRefreshButton"
                         Storyboard.TargetProperty="Opacity"
                         To="0.3" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- Fade in UpdateRefreshButton -->
        <Storyboard x:Key="FadeRefreshButtonIn">
            <DoubleAnimation Storyboard.TargetName="UpdateRefreshButton"
                         Storyboard.TargetProperty="Opacity"
                         To="1" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- Fade out AdvancedToolsButton -->
        <Storyboard x:Key="FadeAdvancedButtonOut">
            <DoubleAnimation Storyboard.TargetName="AdvancedToolsButton"
                         Storyboard.TargetProperty="Opacity"
                         To="0.3" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- Fade in AdvancedToolsButton -->
        <Storyboard x:Key="FadeAdvancedButtonIn">
            <DoubleAnimation Storyboard.TargetName="AdvancedToolsButton"
                         Storyboard.TargetProperty="Opacity"
                         To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>
</Window>