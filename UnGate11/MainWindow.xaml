<Window x:Class="UnGate11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnGate11"
        mc:Ignorable="d"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Title="UnGate11" Height="400" Width="500"
        WindowStyle="None" AllowsTransparency="True">

    <Window.Background>
        <ImageBrush ImageSource="bg.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Clip>
        <RectangleGeometry Rect="0,0,500,400" RadiusX="15" RadiusY="15"/>
    </Window.Clip>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation 
                    From="450" To="400" Duration="0:0:0.5"
                    Storyboard.TargetProperty="(Window.Top)">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation
                    From="0" To="1" Duration="0:0:0.5"
                    Storyboard.TargetProperty="Opacity">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid>
        <Grid MouseLeftButtonDown="DragWindow" Background="Transparent"/>

        <Canvas x:Name="LogoCanvas" MouseLeftButtonDown="DragWindow" VerticalAlignment="Top" Height="70" Margin="100,65,101,215" Panel.ZIndex="1" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform x:Name="LogoScale" ScaleX="1" ScaleY="1"/>
                    <TranslateTransform x:Name="LogoTranslate" X="0" Y="0"/>
                </TransformGroup>
            </Canvas.RenderTransform>
            <Label
            Content="UnGate"
            FontFamily="Segoe UI"
            FontWeight="Bold"
            FontSize="59"
            Foreground="White"
            Background="Transparent" HorizontalAlignment="Center" Height="76" VerticalAlignment="Top" />
            <Path Canvas.Left="220" Height="70" Stretch="Fill" Width="70" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Path.Fill>
                    <SolidColorBrush Color="White"/>
                </Path.Fill>
                <Path.Data>
                    <CombinedGeometry GeometryCombineMode="Exclude">
                        <CombinedGeometry.Geometry1>
                            <RectangleGeometry Rect="145,0,48,48" RadiusX="3" RadiusY="3"/>
                        </CombinedGeometry.Geometry1>
                        <CombinedGeometry.Geometry2>
                            <GeometryGroup>
                                <RectangleGeometry Rect="168,0,2,48"/>
                                <RectangleGeometry Rect="145,23,48,2"/>
                                <RectangleGeometry Rect="168,23,2,2"/>
                            </GeometryGroup>
                        </CombinedGeometry.Geometry2>
                    </CombinedGeometry>
                </Path.Data>
            </Path>
        </Canvas>
        <Image x:Name="LoadingGIF"
            Source="load.gif"
            Width="48" Height="48"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,77,0,0"
            Visibility="Collapsed"
            Opacity="1"
            IsHitTestVisible="False"
            Panel.ZIndex="2"/>

        <!-- Advanced Tools Subtitle -->
        <TextBlock 
            x:Name="AdvancedSubtitle"
            Text="Advanced Tools"
            FontFamily="Bahnschrift"
            FontWeight="Bold"
            FontSize="18"
            Foreground="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0,105,0,0"
            Opacity="0"
            Visibility="Collapsed"
            Panel.ZIndex="1"
            MouseLeftButtonDown="DragWindow"/>

